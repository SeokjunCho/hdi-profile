<mvc:View controllerName="com.hdi.myProfile.controller.Result" displayBlock="true"
  xmlns:f="sap.f"
  xmlns:fb="sap.ui.comp.filterbar"
  xmlns:l="sap.ui.layout"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt" height="100%">
  <f:DynamicPage id="subjectPersonPage" headerExpanded="true" class="sapUiSizeCompact" fitContent="false">
    <f:header>
      <f:DynamicPageHeader pinnable="false" class="noPadding">
        <!--
        <MessageStrip text="설문리스트와 회사를 모두 선택하면 직책, 직위 등은 각 회사에 맞게 자동 세팅됩니다." showCloseButton="true" showIcon="true" customIcon="sap-icon://information" />
        -->
        <l:BlockLayout>
          <l:BlockLayoutRow>
            <l:BlockLayoutCell class="mainBackground">
              <VBox alignItems="Start" justifyContent="Center">
                <VBox class="backgroudMiddleVBox">
                  <VBox height="1rem"/>
                  <Text text="다양한 방법으로 프로필을 조회 할 수 있습니다." class="mainText1Row"/>
                  <VBox height="2rem"/>
                  <HBox>
                    <VBox>
                      <Text text="Category" class="subTextTitle"/>
                      <Select width="12rem" change="onChangeCategory">
                        <items>
                          <core:ListItem key="name" text="성명으로 검색"/>
                          <core:ListItem key="personId" text="사번으로 검색"/>
                          <core:ListItem key="orgeh" text="조직명으로 검색"/>
                          <core:ListItem key="massPersonId" text="사번으로 대량 검색"/>
                        </items> 
                      </Select>
                    </VBox>
                    <HBox width="1rem"/>
                    <VBox id="searchVBox">
                      <Text text="검색어" class="subTextTitle"/>
                      <SearchField width="32rem" placeholder="두 글자 이상 입력하세요."/>
                    </VBox>
                    <VBox id="uploadVBox" visible="false">
                      <Text text="업로드" class="subTextTitle"/>
                      <Button type="Emphasized" text="사번 Upload" press="onPressUpload"/>
                    </VBox>
                  </HBox>
                </VBox>

                <VBox class="stars"/>
                <VBox class="stars2"/>
                <VBox class="stars3"/>
                <VBox class="stars4"/>
              </VBox>
            </l:BlockLayoutCell>
          </l:BlockLayoutRow>
        </l:BlockLayout>

      </f:DynamicPageHeader>
    </f:header>
  </f:DynamicPage>
</mvc:View>
